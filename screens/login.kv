<RememberScreen>:
    name: 'remember'
    on_enter: root.check_cache()
    FloatLayout:
        size_hint: None, None

        ImageButton:
            source: "images/blankprofile.png"
            id: profile
            x: (root.width * .5)-90
            y: root.height * .45
            size_hint_x: 2
            size_hint_y: 2
            allow_stretch: True

        Image:
            source: "images/profile_frame_2.png"
            x: (root.width * .5)-90
            y: root.height * .45
            size_hint_x: 2
            size_hint_y: 2
            allow_stretch: True

        Button:
            id: enter_button
            text: "Continue as joshbenson_"
            x: (root.width * .5)-150
            y: root.height * 0.28
            size: 300, 70
            size_hint: None, None
            color: 1, 1, 1, 1
            bold: True
            background_normal: 'images/buttonbackgrounds/enter_up.png'
            background_down: 'images/buttonbackgrounds/enter_down.png'
            border: 30,30,30,30
            on_release: root.continue_remember()

        Button:
            text: "Switch account"
            id: switch_acc
            color: (0, 0, 0, .5)
            size: 300, 70
            background_color: 0, 0, 0, 0
            x: (root.width * .5)-50
            y: root.height * 0.15 - 15
            underline: True
            on_press: root.switch_account('press')
            on_release: root.switch_account('release')

        Label:
            text: "Copyright 2020. All rights reserved. Created by Josh Benson. \n Reuse of any intellectual property violates US law Republic Act No. 8293. Any and all violations will be persecuted"
            font_size: 10
            halign: 'center'
            color: (0, 0, 0, .5)
            x: (root.width * .5) - 50
            y: 0


<NewUserScreen>:
    name: 'newUser'
    FloatLayout:
        size_hint: None, None

        TextInput:
            id: username
            multiline:False
            width: 300
            size_hint: (None, None)
            height: 30
            x: (root.width * .5) - 150
            y: (root.height * 0.6)
            background_color: 1, 1, 1, .3
            hint_text_color: 0, 0, 0, .3
            hint_text: "username"
            foreground_color: 0, 0, 0, .8

        TextInput:
            id: password
            multiline:False
            width: 300
            size_hint: (None, None)
            height: 30
            x: (root.width * .5) - 150
            y: (root.height * 0.5)
            background_color: 1, 1, 1, .3
            hint_text_color: 0, 0, 0, .3
            hint_text: "password"
            foreground_color: 0, 0, 0, .8
            password: True

        Button:
            id: logIn
            text: "Log In"
            x: (root.width * .5)-150
            y: root.height * 0.25
            size: 300, 70
            size_hint: None, None
            color: 1, 1, 1, 1
            bold: True
            background_color: 3, 1, 1, 1
            on_press: root.logIn()

        Label:
            text: ""
            id: error_info
            font_size: 12
            halign: 'center'
            color: (.8, 0, 0, .6)
            x: (root.width * .5) - 50
            y: (root.height * 0.5) - 65

        Label:
            text: "Copyright 2020. All rights reserved. Created by Josh Benson. \n Reuse of any intellectual property violates US law Republic Act No. 8293. Any and all violations will be persecuted"
            font_size: 10
            halign: 'center'
            color: (0, 0, 0, .5)
            x: (root.width * .5) - 50
            y: 0