<RememberScreen>:
    name: 'remember'
    FloatLayout:
        size_hint: None, None

        Image:
            source: "images/blankprofile.png"
            x: (root.width * .5)-170
            y: root.height * .38
            size_hint_x: 3.4
            size_hint_y: 3.4
            allow_stretch: True

        Button:
            id: enter_button
            text: "Continue as joshbenson_"
            x: (root.width * .5)-150
            y: root.height * 0.28
            size: 300, 70
            size_hint: None, None
            color: 1, 1, 1, 1
            bold: True
            background_normal: 'images/buttonbackgrounds/enter_up.png'
            background_down: 'images/buttonbackgrounds/enter_down.png'
            border: 30,30,30,30
            on_release: root.continue_remember()

        Button:
            text: "Switch account"
            id: switch_acc
            color: (0, 0, 0, .5)
            size: 300, 70
            background_color: 0, 0, 0, 0
            x: (root.width * .5)-50
            y: root.height * 0.15 - 15
            underline: True
            on_press: root.switch_account('press')
            on_release: root.switch_account('release')

        Label:
            text: "Copyright 2020. All rights reserved. Created by Josh Benson. \n Reuse of any intellectual property violates US law Republic Act No. 8293. Any and all violations will be persecuted"
            font_size: 10
            halign: 'center'
            color: (0, 0, 0, .5)
            x: (root.width * .5) - 50
            y: 0


<NewUserScreen>:
    name: 'newUser'
    FloatLayout:
        size_hint: None, None

        Image:
            source: "images/blankprofile.png"
            x: (root.width * .5)-170
            y: root.height * .38
            size_hint_x: 3.4
            size_hint_y: 3.4
            allow_stretch: True